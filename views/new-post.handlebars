<div class="container">
    <h3>Create a New Post!</h3>

    <form>
        <div>
            <label for="post-title" class="form-label">Post Title:</label>
            <input type="text" class="form-control" id="post-title" />
        </div>
        <div>
            <label for="post-description" class="form-label">Description:</label>
            <textarea class="form-control" type="text" id="post-description" rows="3"></textarea>
        </div>
        <div class="filler"></div>
        <div class="d-grid gap-2">
            <button class="btn btn-outline-dark" type="submit" id="create-post">Create Post</button>
        </div>
    </form>
</div>
    
<script src="/js/newPost.js"></script>
