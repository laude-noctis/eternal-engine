<div>
    <form>
         <div>
             <label for="post-title">Post Title:</label>
             <input type="text" id="post-title" value="{{title}}"/>
        </div>
         <div>
             <label for="post-description">Description:</label>
             <input type="text" id="post-description" value="{{description}}"/>
         </div>
         <div>
            <button data-id="{{id}}" onclick="updatePost(event)" id="update-post">Update Post</button>
        </div>
    </form>
</div>

<script src="/js/update.js"></script>