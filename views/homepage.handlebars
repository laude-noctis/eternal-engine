<div>
    <div>
        {{#each blogposts}}
        <div class="container">
            {{#if ../logged_in}}
            <div class="card-body">
                <h2 class="card-title"><a class="blogpost-link" href="/blogposts/{{id}}">{{title}}</a></h2>
                <h3 class="card-subtitle mb-2">Posted by: {{user.username}} on {{format_date date_created}}</h3>
                <p class="card-text description">{{description}}</p>
            </div>
            {{else}}
            <div class="card-body">
                <h2 class="card-title">{{title}}</h2>
                <h3 class="card-subtitle mb-2">Posted by: {{user.username}} on {{format_date date_created}}</h3>
                <p class="card-text description">{{description}}</p>
            </div>
            {{/if}}
        </div>
        {{/each}}
    </div>
</div>